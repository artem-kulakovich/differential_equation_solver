<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.bntu.fitr.controller.SettingsController">
   <children>
      <ImageView fitHeight="511.0" fitWidth="676.0" layoutX="-6.0" layoutY="-2.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../templates/backgorund3.gif" />
         </image>
      </ImageView>
      <Label layoutX="243.0" layoutY="14.0" prefHeight="18.0" prefWidth="172.0" text="Настройки" textFill="#fadbff">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <CheckBox fx:id="checkAnimation" layoutX="37.0" layoutY="91.0" mnemonicParsing="false" onMouseClicked="#setAnimationAction" text="Включить анимацию" textFill="#fadbff">
         <font>
            <Font name="System Italic" size="16.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="checkDot" layoutX="37.0" layoutY="119.0" mnemonicParsing="false" onMouseClicked="#setDotAction" text="Включить точки на графике" textFill="#fadbff">
         <font>
            <Font name="System Italic" size="16.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="checkStackedType" layoutX="36.0" layoutY="148.0" mnemonicParsing="false" onMouseClicked="#setStackedTypeAction" text="Включить режим настакивания графиков" textFill="#fadbff">
         <font>
            <Font name="System Italic" size="16.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="checkTable" layoutX="36.0" layoutY="178.0" mnemonicParsing="false" onMouseClicked="#setShowTableTypeAction" text="Показывать таблицу результатов" textFill="#fadbff">
         <font>
            <Font name="System Italic" size="16.0" />
         </font>
      </CheckBox>
      <Button fx:id="menuBtn" layoutX="26.0" layoutY="442.0" mnemonicParsing="false" onMouseClicked="#navigateToMenuAction" prefHeight="26.0" prefWidth="90.0" text="В меню" textFill="#8e45a4">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font></Button>
      <RadioButton fx:id="areaChartRb" layoutX="37.0" layoutY="293.0" mnemonicParsing="false" onMouseClicked="#setAreaChartAction" text="График площадь" textFill="#fadbff">
         <font>
            <Font name="System Italic" size="16.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="lineChartRb" layoutX="37.0" layoutY="261.0" mnemonicParsing="false" onMouseClicked="#setLineChartAction" text="Линейный график" textFill="#fadbff">
         <font>
            <Font name="System Italic" size="16.0" />
         </font>
      </RadioButton>
      <Label layoutX="37.0" layoutY="50.0" text="Общие настройки:" textFill="#fadbff">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="37.0" layoutY="220.0" text="Настройки вида графика:" textFill="#fadbff">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
